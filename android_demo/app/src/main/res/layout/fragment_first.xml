<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment">


    <ImageView
        android:id="@+id/lastLock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_other_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Other Info"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/tv_server_ip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lastLock"
        />

    <TextView
        android:id="@+id/tv_server_ip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Server ip: "
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/button_unlock"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lastLock" />
    <Button
        android:id="@+id/button_unlock"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:backgroundTint="#5EB0DB"
        android:text="Unlock"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lastLock" />
</androidx.constraintlayout.widget.ConstraintLayout>